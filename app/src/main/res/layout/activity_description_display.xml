<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".displaydetails.DescriptionDisplay">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/back"/>
        <ImageView
            android:id="@+id/place_Pic_D"
            android:scaleType="fitXY"
            android:src="@drawable/jaflong"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="left"
                android:layout_weight="1"
                android:id="@+id/place_Title_D"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:text="Jaflong- Sylhet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:padding="8dp"
                android:gravity="right"
                android:text="hgfhgfffh"
                android:textSize="24dp"
                android:textColor="@color/red500"
                android:layout_gravity="right"
                android:id="@+id/offer_bdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="d"
            android:layout_marginLeft="15dp"
            android:textAlignment="gravity"
            android:id="@+id/placeDivision_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:autoLink="all"
            android:id="@+id/placeDes_D"
            android:linksClickable="true"
            android:justificationMode="inter_word"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            android:id="@+id/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark2"
            android:layout_margin="16dp"
            android:text="Customize your deal"
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</android.support.v4.widget.NestedScrollView>