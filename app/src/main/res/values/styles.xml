<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/snow_white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">70</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:shadowColor">#a2050505</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">@font/aharoni</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.3</item>
    </style>

    <style name="form_label">
        <item name="android:letterSpacing" tools:ignore="NewApi">0.2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="form_textview">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="form_text">
        <item name="android:letterSpacing" tools:ignore="NewApi">0.2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/snow_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Custom" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>
